{
  "name": "typescript",
  "scripts": {
    "test": "PULUMI_CONFIG='{\"aws:config:region\":\"eu-west-1\"}' jest"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "latest",
    "dotenv": "^7.0.0",
    "jest": "^23.6.0",
    "jest-config": "^23.6.0",
    "ts-jest": "^23.10.4"
  },
  "dependencies": {
    "@project-furnace/fsutils": "^0.1.6",
    "@project-furnace/gitutils": "^0.1.4",
    "@project-furnace/s3utils": "^0.1.6",
    "@project-furnace/ziputils": "^0.1.4",
    "@pulumi/aws": "^0.17.1",
    "@pulumi/pulumi": "^0.17.1",
    "@types/lodash": "^4.14.120",
    "@types/tmp": "0.0.33",
    "@types/yamljs": "^0.2.30",
    "bignumber.js": "^8.0.1",
    "folder-hash": "^2.1.2",
    "lodash": "^4.17.11",
    "simple-git": "^1.107.0",
    "tmp": "0.0.33",
    "util.merge-packages": "0.0.15",
    "yamljs": "^0.3.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ],
    "testPathIgnorePatterns": [
      "/test/fixtures/"
    ]
  }
}
