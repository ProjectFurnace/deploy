{
  "name": "typescript",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "latest",
    "jest": "^23.6.0",
    "jest-config": "^23.6.0",
    "ts-jest": "^23.10.4"
  },
  "dependencies": {
    "@project-furnace/fsutils": "^0.1.3",
    "@pulumi/aws": "^0.16.2",
    "@pulumi/pulumi": "latest",
    "@types/tmp": "0.0.33",
    "@types/yamljs": "^0.2.30",
    "folder-hash": "^2.1.2",
    "simple-git": "^1.107.0",
    "tmp": "0.0.33",
    "yamljs": "^0.3.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  }
}
